.errors
  - commit.errors.full_messages.each do |message|
    .error.notice= message

.heading
  h5 title= dataset.geo_id
    = dataset.area.humanize

= render 'shared/flash', flash: flash

.info
  .content
    .nav
      ul.tab-nav
        - menu_structure.each_pair do |group, subgroups|
          li.tab
            = link_to I18n.t("datasets.groups.#{ group }"), "##{ group }", data: { group: group }

            - if subgroups
              ul.sub-nav id=group
                - subgroups.each do |subgroup|
                  li.tab
                    = link_to I18n.t("datasets.subgroups.#{ group }.#{ subgroup }"), "##{ subgroup }", data: { group: group }

    .clear

    .attributes
      = form_for [dataset, commit], url: dataset_edits_dataset_commits_path(dataset.geo_id), as: :edits, remote: true do |f|
        = f.hidden_field :dataset_id, value: dataset.id

        .edits
          .group.tab data-tab= "#intro"
            | Lots of text.

          - EditableAttributesCollection::ORDER.each do |group|
            .group.tab data-tab= "##{ group }"
              = render partial: "datasets/attribute", collection: dataset.editable_attributes.grouped[group], locals: { form: f, commit: commit, dataset: dataset }

          - dataset.editable_attributes.grouped.each do |group, attributes|
            - if slider_group?(group)
              .group.tab data-tab= "##{ group }" class='slider-group'
                = render partial: "datasets/attribute", collection: attributes, locals: { form: f, commit: commit, dataset: dataset }

          .group.tab data-tab= "#industry"
            = f.fields_for(:dataset_edits, commit.dataset_edits.build(key: 'has_industry')) do |d|
              = d.label :has_industry
              = d.hidden_field :key, value: 'has_industry'
              = d.check_box :value, checked: toggle_value_for(dataset, 'has_industry'), class: "toggle", data: { open: "industry_grouped" }

            .toggle-group.industry_grouped class=('active' if toggle_value_for(dataset, 'has_industry'))
              = render partial: "datasets/attribute", collection: dataset.editable_attributes.grouped['industry_grouped'], locals: { form: f, commit: commit, dataset: dataset }

          .group.tab data-tab= "#agriculture"
            = f.fields_for(:dataset_edits, commit.dataset_edits.build(key: 'has_agriculture')) do |d|
              = d.label :has_agriculture
              = d.hidden_field :key, value: 'has_agriculture'
              = d.check_box :value, checked: toggle_value_for(dataset, 'has_agriculture'), class: "toggle", data: { open: "agriculture_grouped" }

            .toggle-group.agriculture_grouped class=('active' if toggle_value_for(dataset, 'has_agriculture'))
              = render partial: "datasets/attribute", collection: dataset.editable_attributes.grouped['agriculture_grouped'], locals: { form: f, commit: commit, dataset: dataset }

          .group.tab data-tab= "#overview"
            .boxes
              strong data-key='overview-edits' Overview edits
              .box.overview-edits.open
                .edits
                  .editable
                    .border
                    .input
                      .left
                        span.key
                          | households_cooling_airconditioning_electricity_share

                      .right
                        span.info data-key= 'households_cooling_airconditioning_electricity_share'
                          i.fa.fa-info
                        span.val
                          | 40
                        span.unit
                          | %

                      .clear

                  .information.hidden.households_cooling_airconditioning_electricity_share
                    .line-arrow
                    strong Test
                    .change
                      .content
                        | The share of cooling that will go to airconditioning is 40%, this number is based on the
                        |  electricity demand which is set to 1000kWh, the share of x, the share of y, which results in
                        |  1000kWh * x * y = 40%.

                  .editable
                    .border
                    .input
                      .left
                        span.key
                          | households_cooling_heatpump_air_water_electricity_share

                      .right
                        span.info data-key= 'households_cooling_heatpump_air_water_electricity_share'
                          i.fa.fa-info
                        span.val
                          | 30
                        span.unit
                          | %

                      .clear

                  .information.hidden.households_cooling_heatpump_air_water_electricity_share
                    .line-arrow
                    .change
                      .content
                        | The share of cooling that will go to airconditioning is 40%, this number is based on the
                        |  electricity demand which is set to 1000kWh, the share of x, the share of y, which results in
                        |  1000kWh * x * y = 40%.

                  .editable
                    .border
                    .input
                      .left
                        span.key
                          | households_cooling_heatpump_ground_water_electricity_share

                      .right
                        span.info data-key= 'households_cooling_heatpump_ground_water_electricity_share'
                          i.fa.fa-info
                        span.val
                          | 30
                        span.unit
                          | %

                      .clear

                  .information.hidden.households_cooling_heatpump_ground_water_electricity_share
                    .line-arrow
                    .change
                      .content
                        | The share of cooling that will go to airconditioning is 40%, this number is based on the
                        |  electricity demand which is set to 1000kWh, the share of x, the share of y, which results in
                        |  1000kWh * x * y = 40%.

                  .editable
                    .border
                    .input
                      .left
                        span.key
                          | households_useful_demand_for_cooling

                      .right
                        span.info data-key= 'households_useful_demand_for_cooling'
                          i.fa.fa-info
                        span.val
                          | 1.200.000,54
                        span.unit
                          | kWh

                      .clear

                  .information.hidden.households_useful_demand_for_cooling
                    .line-arrow
                    strong Test
                    .change
                      .content
                        | The share of cooling that will go to airconditioning is 40%, this number is based on the
                        |  electricity demand which is set to 1000kWh, the share of x, the share of y, which results in
                        |  1000kWh * x * y = 200kWh.

                .apply
                  = f.submit "Apply", disabled: 'disabled'

              strong data-key='other-values' Other values
              .box.other-values
                .edits
                  | Lorum ipsum

  .clear
