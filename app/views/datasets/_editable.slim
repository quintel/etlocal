.editable
  span.status class=('edited' if has_dataset_edit?(key))
  strong.key title=(key.to_s)
    = truncate(key.to_s, length: 48)

  span.val
    - if is_boolean_value?(value)
      i.fa class=(value.to_s == "true" ? "fa-check" : "fa-times")
    - else
      = value

  .actions
    = link_to I18n.t("edit"), edit_dataset_dataset_edit_path(@dataset.area, key), class: "button"
    span.or or
    = link_to I18n.t("cancel"), "#", class: "button cancel"

  .clear
