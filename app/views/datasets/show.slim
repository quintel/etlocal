- if flash[:success]
  .flash
    .success.notice= flash[:success]

h4= @dataset.area.humanize

.attributes
  .static.tab
    h5 Static

    .non-editable
      strong.key Base dataset
      span.val= @dataset.base_dataset

    .non-editable
      strong.key Analysis year
      span.val= @dataset.analysis_year

  .area.tab
    h5 Area attributes

    - @dataset.editable_attributes.each do |attribute|
      = render 'editable', key: attribute.name, value: dataset_value_for(attribute.name)

  .initializer-inputs.tab
    h5 Inputs

    - @dataset.inputs.each do |key, value|
      = render 'editable', key: key, value: dataset_input_value_for(key)

.actions
  = link_to "Home", datasets_path, class: "button"
